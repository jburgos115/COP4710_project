@page
@model ECommerce.Pages.LoginRegister.LoginModel
@{
    ViewData["Title"] = "Login";
}

@if(TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}
else if(TempData["error"] != null)
{
    <h2 style="color: red">@TempData["error"]</h2>
}

<script>
     $(document).ready(function () {
         $('header').empty();
     });
</script>

<br>
<div class="main justify-content-center">
     <a href="/">
         <img src=~/jungle_com_logo.png />
     </a>
</div>
<br>

<div class="container border" style="padding:20px; width:50%">
    <form method="post">
        <div class="FormBox">
            <h2>Log In</h2>
            <hr>
            <br>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form--group row" style="margin-bottom:10px">
                <div class="col-sm-12">
                    <input placeholder="Email Address" type="text" asp-for="LoginInfo.Email" maxlength="50" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="LoginInfo.Email"></span>
            </div>
            <div class="form--group row" style="margin-bottom:25px">
                <div class="col-sm-12">
                    <input placeholder="Password" type="password" asp-for="LoginInfo.Password" maxlength="32" class="form-control"/>
                </div>
                <span class="text-danger" asp-validation-for="LoginInfo.Password"></span>
            </div>
            <div class="form--group row justify-content-center">
                <input class="button button1" type="submit" value="Login">
                <!-- <a class="button button1" asp-page="/LoginRegister/ForgotPassword">Forgot Password?</a>  -->
            </div>
            <div class="main justify-content-center">
                <span class="line-left"></span>
                <span class="line-or">or</span>
                <span class="line-right"></span>
            </div>
            <div class="main justify-content-center">
                <span>
                    New to Jungle?
                    <a href="~/LoginRegister/UserRegister">Sign Up</a>
                </span>
            </div>
        </div>
    </form>
</div>