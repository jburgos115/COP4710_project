@using System.Security.Claims
@if (User.Identity.IsAuthenticated) 
{
	<form method="post" class="form-inline" asp-page="/LoginRegister/Logout">
		<span style="margin-right: 20px">Welcome, @User.Identity.Name!</span>
		
		<a class="btn btn-primary" asp-page="/LoginRegister/ProfileSettings">
		<i class="bi bi-person-square"></i> &nbsp;Profile</a>

		<a class="btn btn-primary" asp-page="/Order/OrderSummary">
		<i class="bi bi-bag"></i> &nbsp;Orders</a>

		<button type="submit" class="btn btn-primary">Sign Out</button>
	</form>
}
else
{
	<a class="btn btn-primary" asp-page="/LoginRegister/Login">Log In</a>
	<a class="btn btn-primary" asp-page="/LoginRegister/UserRegister">Sign Up</a>
}