@page
@model ECommerce.Pages.Update.UpdateModel
@{
	var prodObj = Model.Products;
}

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="pl-3">Edit Product</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Products.Name">Name</label>
			<input asp-for="Products.Name" class="form-control" maxlength="30" />
			<span asp-validation-for="Products.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Products.Description">Description</label>
			<input asp-for="Products.Description" class="form-control" maxlength="50" />
			<span asp-validation-for="Products.Description" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Products.Price">Price</label>
			<input asp-for="Products.Price" class="form-control" maxlength="50" />
			<span asp-validation-for="Products.Price" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Products.Quantity">Quantity</label>
			<input asp-for="Products.Quantity" class="form-control" maxlength="50" />
			<span asp-validation-for="Products.Quantity" class="text-danger"></span>
		</div>
		<button type="submit" pid=@prodObj.ProductID sid=@prodObj.ShopID class="btn btn-primary" style="width:150px">Update</button>
	</div>
</form>
