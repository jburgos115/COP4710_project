@page
@model ECommerce.Pages.Product.ViewModel
@{
    ViewData["Title"] = "Product Name Here";
}

<div class="row">
    <div class="col">
        <img src="/ProductImages/apple.png" alt="Apple" width="400" height="200">
    </div>
    <div class="col">
        <div class="row">
            <h4>&lt;PRODUCT NAME&gt;</h4>
        </div>
        <div class="row">
            <a asp-page="\..\Shops" asp-route-shopid=1>Visit &lt;SHOP&gt;</a>
        </div>
        <div class="row">
            <p><strong>Price:</strong> &lt;PRODUCT PRICE&gt;</p>
        </div>
        <div class="row">
            <p>&lt;PRODUCT DESCRIPTION&gt;</p>
        </div>
    </div>
</div>